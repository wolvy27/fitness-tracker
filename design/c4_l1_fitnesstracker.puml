@startuml C4_Level1_FitnessTracker
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

Person(user, "Fitness App User", "A user tracking their fitness progress")

System(fitnessApp, "FitnessTracker", "Allows users to log meals, workouts, and daily goals")

System_Ext(mysqlDb, "MySQL Databases", "Stores user and workout data")
System_Ext(postgresDb, "PostgreSQL Database", "Stores meal data")
System_Ext(h2Db, "H2 Database", "Development/test database")

Rel(user, fitnessApp, "Uses")
Rel(fitnessApp, mysqlDb, "Reads/Writes user data")
Rel(fitnessApp, postgresDb, "Reads/Writes meal data")
Rel(fitnessApp, h2Db, "Uses for testing")

@enduml